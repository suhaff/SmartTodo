<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sample.controller.TodoController"
            prefHeight="400.0" prefWidth="600.0">

    <!-- TOP MENU BAR -->
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu text="File">
                    <items>
                        <MenuItem text="Close"/>
                    </items>
                </Menu>
                <Menu text="Edit">
                    <items>
                        <MenuItem text="Delete"/>
                    </items>
                </Menu>
                <Menu text="Help">
                    <items>
                        <MenuItem text="About"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

    <!-- CENTER TABLE -->
    <center>
        <TableView fx:id="taskTable" prefHeight="200.0" prefWidth="200.0"
                   BorderPane.alignment="CENTER">

            <columns>
                <TableColumn fx:id="titleCol" prefWidth="120" text="Title"/>
                <TableColumn fx:id="categoryCol" prefWidth="120" text="Category"/>
                <TableColumn fx:id="priorityCol" prefWidth="120" text="Priority"/>
                <TableColumn fx:id="dateCol" prefWidth="120" text="Due Date"/>
            </columns>
        </TableView>
    </center>

    <!-- RIGHT SIDE FORM -->
    <right>
        <VBox spacing="10" prefWidth="200" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>
            <children>
                <Label text="Task Form"/>
                <TextField fx:id="titleField" promptText="Enter title..."/>
                <TextArea fx:id="descField" prefHeight="120"/>

                <DatePicker fx:id="datePicker"/>
                <ComboBox fx:id="categoryBox" prefWidth="150"/>
                <ComboBox fx:id="priorityBox" prefWidth="150"/>

                <CheckBox fx:id="completedCheck" text="Completed"/>

                <HBox spacing="10">
                    <children>
                        <Button text="Add" onAction="#addTask"/>
                        <Button text="Update" onAction="#updateTask"/>
                        <Button text="Delete" onAction="#deleteTask"/>
                        <Button text="Mark Completed" onAction="#markCompleted"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </right>


    <!-- BOTTOM SEARCH-->
    <bottom>
        <HBox spacing="10" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10.0" bottom="10.0" left="10.0" right="10.0" />
            </padding>
            <children>
                <TextField fx:id="searchField" promptText="Search tasks..." />
                <ComboBox fx:id="filterCategoryBox" prefWidth="150.0" />
                <Button text="Search" onAction="#searchTasks" />
                <Button text="Filter" onAction="#filterCategory" />
            </children>
        </HBox>
    </bottom>


</BorderPane>
